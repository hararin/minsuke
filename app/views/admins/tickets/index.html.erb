<div class="container">
	<div class="row">
		<div class="col-12 col-md-8 offset-md-2 form-box">
			<h2>チケット登録</h2>
			<%= form_with model: @ticket, local: true, url: admins_tickets_path do |f| %>
				<div class="form-group row">
			        <%= f.label :"チケット名", class: "col-3 col-form-label" %>
			        <div class="col-9">
		            	<%= f.text_field :name, class: "form-control" %>
	            	</div>
			    </div>
			    <div class="form-group row">
			        <%= f.label :"枚数", class: "col-3 col-form-label" %>
			        <div class="col-1">
						<%= f.select :quantity, options_for_select((1..99).to_a), class: "form-control" %>
					</div>
			    </div>
			    <div class="form-group row">
			        <%= f.label :"価格(円)", class: "col-3 col-form-label" %>
			        <div class="col-3">
		            	<%= f.text_field :price, class: "form-control" %>
	            	</div>
			    </div>
			    <div class="actions">
			        <%= f.submit "登録する", class: "btn btn-primary" %>
			    </div>
			<% end %>
		</div>
	</div>
	<div class="row">
		<div class="col-12 col-md-8 offset-md-2">
			<h4>チケット一覧</h4>
			<table class="table table-bordered">
				<tbody>
					<% @tickets.each do |ticket| %>
						<tr>
							<td><%= ticket.id %></td>
							<td><%= ticket.name %></td>
							<td><%= ticket.quantity %>枚</td>
							<td><%= ticket.price %>円</td>
							<td><%= link_to "編集する", edit_admins_ticket_path(ticket), class: "btn btn-outline-success" %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>