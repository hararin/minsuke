<!DOCTYPE html>
<html>
  <head>
    <title>Ihelp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div>
      <nav class="navbar navbar-expand-lg navbar-dark bg-lightshadow-lg p-3" style="background-color: #000033">
        <a class="navbar-brand" href="/">M I N S U K E</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <%= link_to about_path, class: "nav-link" do %>
                <i class="fa fa-exclamation-circle"></i> M I N S U K E について
              <% end %>
            </li>
            <% if current_user %>
              <li class="nav-item">
                <%= link_to users_user_path(current_user), class: "nav-link" do %>
                  <i class="fa fa-user"></i> マイページ
                <% end %>
              </li>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fa fa-thumbs-up"></i> 助っ人依頼</a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                  <%= link_to "依頼一覧", users_requests_path, class: "dropdown-item" %><br>
                  <%= link_to "依頼投稿", new_users_request_path, class: "dropdown-item" %><br>
                </div>
              </li>
              <li class="nav-item">
                <%= link_to new_users_purchase_path, class: "nav-link" do %>
                  <i class="fa fa-ticket"></i> チケット
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "nav-link btn btn-danger", style: "color: #fff" %>
              </li>
            <% elsif current_admin %>
              <li class="nav-item">
                <%= link_to "ユーザー一覧", admins_users_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "依頼一覧", admins_requests_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "チケット一覧", admins_tickets_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "通報一覧", admins_reports_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "nav-link btn btn-danger", style: "color: #fff" %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "ユーザー登録", new_user_registration_path, class: "nav-link btn btn-primary btn-sm", style: "color: #fff" %>
              </li>
              <li class="nav-item">
                <%= link_to "ログイン", new_user_session_path, class: "nav-link btn btn-success btn-sm", style: "color: #fff" %>
              </li>
              <li class="nav-item">
                <%= link_to "管理者ログイン", new_admin_session_path, class: "nav-link btn btn-secondary btn-sm", style: "color: #fff" %>
              </li>
            <% end %>
          </ul>
        </div>
      </nav>
    </div>
    <%= yield %>
    <footer class="footer">
      <div class="footer-container">
        <% if current_user %>
          <p class="text-muted"><%= link_to "M I N S U K E について", about_path, class: "footer-link" %> <%= link_to "マイページ", users_user_path(current_user), class: "footer-link" %> <%= link_to "依頼一覧", users_requests_path, class: "footer-link" %> <%= link_to "依頼投稿", new_users_request_path, class: "footer-link" %> <%= link_to "チケット購入", new_users_purchase_path, class: "footer-link" %></p>
        <% elsif current_admin %>
          <p class="text-muted"><%= link_to "ユーザー一覧", admins_users_path, class: "footer-link" %> <%= link_to "依頼一覧", admins_requests_path, class: "footer-link" %>  <%= link_to "チケット一覧", admins_tickets_path, class: "footer-link" %> <%= link_to "通報一覧", admins_reports_path, class: "footer-link" %></p>
        <% else %>
          <p class="text-muted"><%= link_to "M I N S U K E について", about_path, class: "footer-link" %> <%= link_to "ログイン", new_user_session_path, class: "footer-link" %> <%= link_to "ユーザー登録", new_user_registration_path, class: "footer-link" %> <%= link_to "管理者ログイン", new_admin_session_path, class: "footer-link" %></p>
        <% end %>
      </div>
    </footer>
  </body>
</html>
