<div class="req-box col-12 col-lg-6" style="border: 1px solid #DDDDDD;">
  <%= link_to users_request_path(request) do %>
    <span class="req-badge">
      <% if DateTime.now <= request.datetime %>
        <span class="badge badge-success">進行中</span>
        <% if request.capacity == request.participants.all.count %>
          <span class="badge badge-dark">満員</span>
        <% else %>
          <span class="badge badge-primary">空き</span>
        <% end %>
      <% else %>
        <span class="badge badge-danger">終了</span>
      <% end %>
    </span>
    <div class="req-img">
      <%= attachment_image_tag request, :image, :fill, 150, 100, format: 'jpg', fallback: "1560031.jpg", size: '100x70', class: "thumbnail" %>
    </div>
    <div class="req-text">
      <p class="title"><%= request.title %></p>
      <p>日時 : <%= request.datetime %></p>
      <p>依頼者 : 
        <%= attachment_image_tag request.user, :image, :fill, 100, 100, format: 'jpeg', fallback: "1560031.jpg", size: '30x30', class: "prof-img" %>
        <%= request.user.name %>
      </p>
      <p class="req-info">助っ人登録数 : <%= request.participants.count %>/<%= request.capacity %></p>
    </div>
  <% end %>
</div>