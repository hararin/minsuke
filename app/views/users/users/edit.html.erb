<div class="container">
  <ol class="breadcrumb">
    <%= render_breadcrumbs :tag => :li, :separator => " > " %>
  </ol>
	<div class="row">
		<div class="col-12 col-md-8 form-box">
      <h2>プロフィール編集</h2>
      <%= render 'layouts/error_messages', model: @user %>
			<%= form_with model: @user, local: true, url: users_user_path(@user) do |f| %>
			    <div class="form-group row">
			        <%= f.label :"", class: "col-12 col-sm-3 col-form-label" do %>
                名前 <span class="badge badge-danger">必須</span>
              <% end %>
			        <div class="col-12 col-sm-9">
		            	<%= f.text_field :name, class: "form-control form" %>
	            	</div>
			    </div>
            <div class="form-group row">
              <%= f.label :"自己紹介文", class: "col-12 col-sm-3 col-form-label" %>
              <div class="col-12 col-sm-9">
                  <%= f.text_area :introduction, class: "form-control form" %>
                </div>
            </div>
        		<div class="form-group row">
        			<%= f.label :"プロフィール画像", class: "col-3 col-form-label" %>
        			<div class="col-9">
        				<%= f.attachment_field :image %>
        			</div>
        		</div>
			    <div class="actions">
			        <%= f.submit "更新する", class: "btn btn-success", style: "width: 100%;" %>
			    </div>
			<% end %>
      <hr class="my-4">
      <div style="text-align: center;">
        <p>退会を希望の方はこちら</p>
        <%= link_to "退会する", users_withdraw_path(@user), class: "btn btn-outline-danger btn-sm", method: :patch, data: { confirm: "<i class='fa fa-exclamation-circle'></i>本当に退会しますか？",
                                cancel: "戻る",
                                commit: '退会する' } %>
      </div>
		</div>
    <%= render 'layouts/profile', user: current_user %>
	</div>
</div>